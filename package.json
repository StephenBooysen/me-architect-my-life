{
  "name": "me-architect-my-life",
  "version": "1.0.0",
  "description": "Personal Goal & Habit Tracker Desktop Application built with Electron",
  "homepage": "https://github.com/StephenBooysen/me-architect-my-life#readme",
  "bugs": {
    "url": "https://github.com/StephenBooysen/me-architect-my-life/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StephenBooysen/me-architect-my-life.git"
  },
  "license": "ISC",
  "author": "Stephen Booysen",
  "type": "commonjs",
  "main": "electron.js",
  "scripts": {
    "start": "node app.js",
    "dev:web": "nodemon  --watch ./src app.js",
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "build:electron": "electron-builder",
    "build:electron-all": "electron-builder -mwl",
    "dist": "npm run build:electron",
    "pack": "electron-builder --dir",
    "test": "jest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "kill": "kill -9 $(lsof -t -i:3100)"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.81",
    "@anthropic-ai/sdk": "^0.24.0",
    "chart.js": "^4.2.1",
    "cors": "^2.8.5",
    "date-fns": "^2.29.3",
    "ejs": "^3.1.10",
    "electron": "^28.0.0",
    "express": "^4.21.2",
    "express-ejs-layouts": "^2.5.1",
    "node-fetch": "^2.7.0",
    "noobly-applications": "^1.1.0",
    "noobly-core": "^1.3.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.6.4",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "nodemon": "^3.0.0",
    "prettier": "^2.8.4"
  },
  "build": {
    "appId": "com.stephenbooysen.architect-my-life",
    "productName": "Architect My Life",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/dist/**/*",
      "!**/coverage/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "public/images/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/images/icon.ico"
    },
    "linux": {
      "category": "Office",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/images/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  }
}
