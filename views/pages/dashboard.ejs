<div class="goals-container">
  <!-- Loading state -->
  <div id="loading-state" class="flex items-center justify-center" style="height: 200px;">
    <div class="spinner"></div>
  </div>

  <!-- Dashboard content -->
  <div id="dashboard-content" class="hidden">
    <!-- Dashboard Header -->
    <div class="goals-header">
      <div>
        <h1 class="text-3xl font-bold text-foreground mb-2">Dashboard</h1>
        <p class="text-lg text-muted-foreground">Your daily overview and progress</p>
      </div>
    </div>

    <!-- Simple Dashboard Stats -->
    <div class="grid grid-cols-4 gap-6 mb-6">
      <div class="card text-center">
        <div class="card-content p-4">
          <div class="text-2xl font-bold text-primary" id="completion-percentage">0%</div>
          <div class="text-sm text-muted-foreground">Today's Progress</div>
        </div>
      </div>
      
      <div class="card text-center">
        <div class="card-content p-4">
          <div class="text-2xl font-bold text-success" id="focus-count">0</div>
          <div class="text-sm text-muted-foreground">Focus Goals</div>
        </div>
      </div>
      
      <div class="card text-center">
        <div class="card-content p-4">
          <div class="text-2xl font-bold text-warning" id="habits-done">0</div>
          <div class="text-sm text-muted-foreground">Habits Done</div>
        </div>
      </div>
      
      <div class="card text-center">
        <div class="card-content p-4">
          <div class="text-2xl font-bold text-primary" id="active-goals">0</div>
          <div class="text-sm text-muted-foreground">Active Goals</div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Quick Actions</h3>
      </div>
      <div class="card-content">
        <div class="grid grid-cols-4 gap-4">
          <a href="/goals" class="btn btn-primary">Manage Goals</a>
          <a href="/habits" class="btn btn-secondary">Track Habits</a>
          <a href="/focus-areas" class="btn btn-success">Focus Areas</a>
          <a href="/reflection" class="btn btn-warning">Reflection</a>
        </div>
      </div>
    </div>

    <%- include('../partials/_goals-widget') %>
  </div>
</div>

<script>
// Initialize dashboard when page loads
document.addEventListener('DOMContentLoaded', function() {
  loadDashboardData();
});
</script>